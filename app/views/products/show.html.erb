<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>

      <section class="reviews">
      <% if @current_user %>
        <div class="row" style="margin-left: 60px">
          <div class="col-sm-6 col-sm-offset-1">
            <%= form_for [@product, @review] do |form| %>
              <div class="form-group">
                <%= form.label :rating %>
                <%= form.select :rating, (1..5), class: 'form-control' %>
                <br>
                <%= form.label :'Write a review' %>
                <%= form.text_field :description, class: 'form-control' %>
                <%= form.hidden_field :product_id %>
                <%= form.hidden_field :user_id %>
                <br>
                <%= form.submit 'Submit', class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
        </div>
    <% end %>
    <dd class="line" style="margin-left: 137px; width: 82%;"></dd>
      <section class="reviews-box">
        <h3 style=" margin-left: 120px">Reviews</h3>
        <% if @reviews.count == 0 %>
          <h5 style="margin-left: 120px">There are currently no reviews for this item... <% if current_user %> Add one above. <% end %></h5>
        <% end %>
        <% @reviews.reverse.each do |review| %>
          <dl class="dl-horizontal">
           <dt>Name</dt>
            <dd><%= review.user.name %></dd>
           <dt>Rating</dt>
            <dd>
            <% if review.rating == 1 %>
            <%= review.rating %> Star
            <% else %> <%= review.rating %> Stars
            <% end %>
            </dd>
           <dt>Review</dt>
            <dd><%= review.description %></dd>
            <% if @review && @review.user_id == review.user_id %>
              <button><%= link_to 'Delete this review', [@product, review], method: :delete %></button>
            <% end %>
            <br>
            <dd class="line"></dd>
        </dl>
        <% end %>
      </section>
    </section>
  </article>
</section>
